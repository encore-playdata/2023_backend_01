package car;

abstract public class Car {
	//1. 단독으로 생성할 수 없고
	//2. 추상메서드를 구현해야하는 의무가 생김
	int maxSpeed;
	boolean power;
	
	public void changePower() {
		power = !power;
	}
	
	public String go() {
		if(power) {
			return "앞으로 갑니다";
		} else {
			return "시동을 걸어주세요";
		}
	}
	abstract public String sound();
}
